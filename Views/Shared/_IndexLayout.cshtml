 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuanLyBanGiay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    @*  <link rel="stylesheet" href="~/CSS/Admin.css" asp-append-version="true" /> *@
    @* <link href="~/CSSFile/Admin.css" rel="stylesheet" /> *@
    @* <link rel="stylesheet" href="~/QuanLyBanGiay.styles.css" asp-append-version="true" /> *@
    <style>
        .body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        #logo {
            width: 120px;
        }

        .menu {
            background-color: black;
            display: flex;
            text-align: center;
            justify-content: center;
            /* position:fixed;
            width:100%;*/
        }


            .menu a {
                text-decoration: none;
                color: white;
                text-transform: uppercase;
                display: inline-block;
                align-items: center;
                position: relative;
                flex: 1;
                /* font-family: 'Courier New', Courier, monospace; */
                font-size: larger;
                font-weight: bolder;
            }

        .menu-item {
            padding-top: 15px;
        }


        #logo {
            padding-top: 5px;
        }

        a:hover {
            background-color: #474646;
        }

        footer{
            background-color: black;
        }

        .footer-container{
            display:grid;
            grid-template-columns: 1fr 1fr;
          
            padding:50px;
        }

        footer a{
            color:white;
            text-decoration:none;
            font-family:'Times New Roman'
        }

        .menu-footer{
            margin-left:200px;
        
        }   

        .Lienhe{
            margin-left:200px;
        }

        .Lienhe p{
            color:white;
            font-family:'Times New Roman'
        }

    </style>
</head>
<body>

    <nav class="menu">
        <a asp-action="Index" asp-controller="home"><img src="@Url.Content("~/image/logo.png")" alt="Logo" id="logo" /></a>
        <a asp-action="GiamGia" asp-controller="home" class="menu-item">Giảm giá</a>
        <a asp-action="Nam" asp-controller="home" class="menu-item">Nam</a>
        <a asp-action="Nu" asp-controller="home" class="menu-item">Nữ</a>
        <a href="AboutUs.aspx" class="menu-item">
            <i class="bi bi-person"></i>
        </a>
        <a href="AboutUs.aspx" class="menu-item">
            <i class="bi bi-cart"></i>
        </a>
        
    </nav>

    <main role="main" class="pb-3">
                @RenderBody()
     </main>
    

    <footer class="footer-container">
        <div class="menu-footer">
            <a href="ChuongTrinh.aspx">Giảm giá</a> <br /> <br />
            <a href="SupportPage.aspx">Nam</a> <br /> <br />
            <a href="Tintuc.aspx">Nữ</a> <br /> <br />
        </div>
        <div class="Lienhe">
            <p>Liên hệ</p>
            <p>SĐT: 0123456789</p>
            <p>Địa chỉ: 96 Định Công</p>
            <p>Email: abcxyz@gmail.com</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
 
