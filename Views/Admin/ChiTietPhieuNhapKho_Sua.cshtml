@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sửa Chi Tiết Phiếu Nhập Kho</h2>

<form method="post" asp-action="ChiTietPhieuNhapKho_Sua" asp-controller="admin">
    <input type="hidden" name="iMaPNK" value="@ViewBag.MaPNK" />

    <div class="form-group">
        
        <input type="hidden" name="iMaGiay" value="@ViewBag.MaGiay" class="form-control" />
    </div>

    <div class="form-group">
       
        <input type="hidden" name="iSize" value="@ViewBag.Size" class="form-control" />
    </div>

    <div class="form-group">
        <label for="iGiaNhap" class="control-label">Giá Nhập</label>
        <input name="iGiaNhap" class="form-control" />
    </div>

    <div class="form-group">
        <label for="iSlNhap" class="control-label">Số Lượng Nhập</label>
        <input name="iSlNhap" class="form-control" />
    </div>

    <br />
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="ChiTietPhieuNhapKho" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
